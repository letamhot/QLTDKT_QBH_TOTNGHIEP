    })

    function loadDanhSachChiTietThiDua() {
        var idThiDua = $("#idThiDuaProcess").val();
        $("#table_dangkythidua").DataTable({
            "ajax": {
                "url": "/ThiDua/getDanhSachDonViDaDK",
                "data": { idThiDua: idThiDua },
                "type": "GET",
                "datatype": "json",
                "contentType": "application/json;charset=UTF-8"
            },
            "columns": [
                { "data": "stt" },
                { "data": "tenDonViDaDangKy" },
                {
                    "data": "ngayDangKy"
                },
                {
                    "data": "fileDinhKem", "render": function (data) {
                        $('[data-toggle="tooltip"]').tooltip();
                        if (data != "") {
                            var objFile = JSON.parse(data);
                            var html = "<ul class='list-group'>";
                            $.each(objFile, function (key, item) {
                                var spl = item.Key.split(/\\/);
                                html += '<li class="list-group-item"><a href="#" style="color: #2196f3;" data-toggle="tooltip" data-placement="top" title="Download" onclick="downloadfile(\'' + spl + '\', \'' + spl[spl.length - 1] + '\', \'' + item.Value + '\')">' + spl[spl.length - 1] + '</a></li>';
                            });
                            html += "</ul>";
                            return html;
                        }
                        else {
                            return "";
                        }
                    }
                },
                {
                    "data": "idDonVi", "render": function (data) {
                        $('[data-toggle="tooltip"]').tooltip();
                        return "<a class='fa fa-lg fa-edit colorEdit' href='#' data-toggle='tooltip' data-placement='top' title='Xem và cập nhật' onclick='return processChiTietThiDua(" + idThiDua + "," + data + ")'></a>";
                    }
                },
            ],
            destroy: true,
            ordering: false,
            paging: false,
            searching: true,
            bInfo: false,
            deferRender: true
        });
    }

    function processThiDua(idThiDua, type) {
        var question = "";
        if (type == 0) {
            question = "Bạn muốn đóng thi đua này?";
        }
        if (type == 1) {
            question = "Bạn muốn mở thi đua này?";
        }
        var ans = confirm(question);
        if (ans) {
            $.post("/ThiDua/ProcessThiDua", { idThiDua: idThiDua, type: type }, function (data) {
                if (data) {
                    if (type == 0) {
                        showToast("success", "Đóng thi đua thành công!", "Thông báo")
                    }
                    else {
                        showToast("success", "Mở thi đua thành công!", "Thông báo")
                    }
                    loadDanhSachThiDua();
                }
            }).fail(function (error) {
                showToast("error", "error.responseText", "Thông báo lỗi");
            })
        }

    }

    function xoaThiDua(id) {
        var ans = confirm("Bạn chắc chắn muốn xóa thi đua này?");
        if (ans) {
            var ans2 = confirm("Lưu ý: nếu bạn xóa thi đua này, tất cả đăng ký, báo cáo, hồ sơ thi đua cũng sẽ bị xóa, bạn vẫn chắc chắn?");
            if (ans2) {
                $.post("/ThiDua/DeleteThiDua", { idThiDua: id }, function (data) {
                    if (data) {
                        showToast("success", "Xóa thi đua thành công!", "Thông báo");
                        loadDanhSachThiDua();
                    }
                }).fail(function (error) {
                    showToast("error", "Có lỗi khi xóa thi đua", "Thông báo lỗi");
                })
            }
        }
    }
