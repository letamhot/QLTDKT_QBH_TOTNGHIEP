    function loadMainTree() {
        $('#tree_donvi').jstree("destroy");
        $('#tree_donvi').jstree({
            "plugins": ["search"],
            "checkbox": {
                "three_state": true,
                "keep_selected_style": false
            },
            'core': {
                'data': {
                    "themes": {
                        "responsive": true
                    },
                    "url": "/NhanVien/LoadTreeDonVi",
                    "dataType": "json"
                }
            }
        }).on("select_node.jstree", function (e, data) {
            $("#id").val(data.node.id);
            loadData(data.node.id);
        });
    }
