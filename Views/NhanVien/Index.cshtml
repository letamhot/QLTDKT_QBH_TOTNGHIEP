    //Load dữ liệu người dùng
    function loadData(ID) {
        flag = 0;
        //console.log("qqqqqqqqqqqqqqqqqqqqqqq: " + $("#id").val())
        $("#table_nv").DataTable({
            "ajax": {
                "url": "/NhanVien/GetListNhanVien",
